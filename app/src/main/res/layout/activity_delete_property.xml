<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".deleteProperty">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <ImageView
            android:layout_width="33dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/back_button"
            android:contentDescription="@string/Description"
            android:onClick="goBackButton"
            android:src="@drawable/left_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="All your properties"
            android:textColor="#70B3A1"
            android:textSize="40sp" />

        <RelativeLayout
            android:id="@+id/Relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="70px"
            android:background="@drawable/edite_text_border">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="103dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="5dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image1"
                android:text="........"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/location1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name1"
                android:layout_toRightOf="@+id/image1"
                android:text="..."
                android:textSize="20sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#FF0000"
                android:onClick="deleteProperty1"
                android:text="Delete"
                android:textColor="@color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Relative2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="70px"
            android:background="@drawable/edite_text_border">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="103dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="5dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image2"
                android:text="........"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/location2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name2"
                android:layout_toRightOf="@+id/image2"
                android:text="..."
                android:textSize="20sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#FF0000"
                android:onClick="deleteProperty2"
                android:text="Delete"
                android:textColor="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Relative3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="70px"
            android:background="@drawable/edite_text_border">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="103dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="5dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image3"
                android:text="........"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/location3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name3"
                android:layout_toRightOf="@+id/image3"
                android:text="..."
                android:textSize="20sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#FF0000"
                android:onClick="deleteProperty3"
                android:text="Delete"
                android:textColor="@color/white" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>